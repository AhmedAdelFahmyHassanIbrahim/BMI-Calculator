<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label layoutX="128.0" layoutY="40.0" text="BMI Calculator">
               <font>
                  <Font name="System Bold" size="35.0" />
               </font>
            </Label>
            <TextField fx:id="tHeight" layoutX="156.0" layoutY="118.0" prefHeight="25.0" prefWidth="189.0" promptText="Enter your height in meters" />
            <TextField fx:id="tWeight" layoutX="156.0" layoutY="184.0" prefHeight="25.0" prefWidth="189.0" promptText="Enter your weight in kilograms" />
            <Button layoutX="215.0" layoutY="238.0" mnemonicParsing="false" onAction="#buttonclicked" text="Show BMI" />
            <Label fx:id="Lbmi" layoutX="62.0" layoutY="283.0" prefHeight="51.0" prefWidth="393.0">
               <font>
                  <Font name="Baskerville Old Face" size="17.0" />
               </font>
            </Label>
            <Label fx:id="LResult" layoutX="62.0" layoutY="354.0" prefHeight="51.0" prefWidth="393.0">
               <font>
                  <Font name="Baskerville Old Face" size="17.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</GridPane>
